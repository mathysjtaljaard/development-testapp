<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<properties resource="application.properties" />
	
	<context id="NextGen" targetRuntime="MyBatis3">
	
		<property name="javaFileEncoding" value="UTF-8"/>
		
		<jdbcConnection 
			connectionURL="jdbc:mysql://172.17.0.2:3306/nextgen?useSSL=false"
			driverClass="com.mysql.jdbc.Driver" 
			password="app12345" 
			userId="app"
		/>
		
		<javaTypeResolver >
      		<property name="forceBigDecimals" value="true" />
    	</javaTypeResolver>
		
		<javaModelGenerator 
			targetPackage="${mbg.target-package.model}"
			targetProject="${mbg.target-project.java}"
		> 
				<property name="trimStrings" value="true" />
		</javaModelGenerator>		
		
		<javaClientGenerator 
			targetPackage="${mbg.target-package.client.mapper}"
			targetProject="${mbg.target-project.java}" 
			type="${mbg.target-package.client.mapper.type}" 
		/>
		
		<!-- NOTE: tablename is case sensitive -->
		<table schema="nextgen" tableName="contracts">
			<property name="useActualColumnNames" value="true"/>
			<generatedKey column="id" sqlStatement="JDBC" identity="true" />
			<columnOverride column="contractType" property="type"/>
			<columnOverride column="updateDate" javaType="java.sql.Date" jdbcType="TIMESTAMP"/>
			<columnOverride column="createDate" javaType="java.sql.Date" jdbcType="TIMESTAMP"/>
			<columnOverride column="activitationDate" javaType="java.sql.Date" jdbcType="TIMESTAMP"/>
		</table>
	</context>
</generatorConfiguration>